{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v1.3.19/dab.draft.schema.json",
  "data-source": {
    "database-type": "cosmosdb_nosql",
    "connection-string": "@env('DATABASE_CONNECTION_STRING')",
    "options": {
      "database": "INT2",
      "container": "engagements",
      "schema": "staticwebapp.database.schema.gql"
    }
  },
  "runtime": {
    "rest": {
      "enabled": false,
      "path": "/api",
      "request-body-strict": true
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql",
      "allow-introspection": true,
      "depth-limit": 5
    },
    "host": {
      "cors": {
        "origins": [
          "http://localhost:5173/",
          "http://localhost:4280"
        ],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      },
      "mode": "production"
    },
    "pagination": {
      "max-page-size": 1000,
      "default-page-size": 100
    }
  },
  "entities": {
    "Engagement": {
      "source": {
        "object": "engagements"
      },
      "graphql": {
        "enabled": true,
        "type": {
          "singular": "Engagement",
          "plural": "Engagements"
        }
      },
      "rest": {
        "enabled": false
      },
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            {
              "action": "*"
            }
          ]
        }
      ]
    }
  }
}